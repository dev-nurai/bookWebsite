@model ProductVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Product Detail</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />


            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="None"></div>*@
                        <div class="form-floating py-2 col-12">
                            @*<input asp-for="Product.Title" readonly class="form-control border-0 shadow" />*@
                            <label asp-for="Product.Title" class="ms-2"></label>
                            <br/>
                            <p>
                                @Model.Product.Title
                            </p>

                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="Product.Description" class="ms-2 text-muted"></label>
                            <p>@Html.Raw(Model.Product.Description)</p>
                            @*<input type="text"  readonly class="form-control border-0 shadow"/>*@

                        </div>
                        <div class="form-floating py-2 col-12">
                            @*<input asp-for="Product.ISBN" readonly class="form-control border-0 shadow" />*@
                            <label asp-for="Product.ISBN" class="ms-2"></label>
                            <br/>
                            <p>
                                @Model.Product.ISBN
                            </p>
                            
                        </div>
                        <div class="form-floating py-2 col-12">
                            @*<input asp-for="Product.Author" readonly class="form-control border-0 shadow" />*@
                            <label asp-for="Product.Author" class="ms-2"></label>
                            <br/>
                            <p>
                                @Model.Product.Author
                            </p>
                            
                        </div>
                        <div class="form-floating py-2 col-12">
                            @*<input asp-for="Product.ListPrice" readonly class="form-control border-0 shadow" />*@
                            <label asp-for="Product.ListPrice" class="ms-2"></label>
                            <br/>
                            <p>
                                @Model.Product.ListPrice
                            </p>
                            
                            
                        </div>
                        <div class="form-floating py-2 col-12">
                            @*<input asp-for="Product.Price" readonly class="form-control border-0 shadow" />*@
                            <label asp-for="Product.Price" class="ms-2"></label>
                            <br/>
                            <p>
                                @Model.Product.Price
                            </p>
                            
                        </div>
                        <div class="form-floating py-2 col-12">
                            @*<input asp-for="Product.Price50" readonly class="form-control border-0 shadow" />*@
                            <label asp-for="Product.Price50" class="ms-2"></label>
                            <br/>
                            <p>
                                @Model.Product.Price50
                            </p>
                            
                        </div>
                        <div class="form-floating py-2 col-12">
                            @*<input asp-for="Product.Price100" readonly class="form-control border-0 shadow" />*@
                            
                            <label asp-for="Product.Price100" class="ms-2"></label>
                            <br/>
                            <p>@Model.Product.Price100</p>
                           
                        </div>

                        <div class="form-floating py-2 col-12">

                            @*<select asp-for="@Model.Product.CategoryId" disabled asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                            <option  selected>---Select Category---</option>
                            </select>*@
                           @* <input type="text" asp-for="@Model.Product.Category.Name" disabled class="form-control border-0 shadow" />*@

                            
                            <label asp-for="Product.Category.Name" class="ms-2"></label>
                            <br/>
                            <p>@Model.Product.Category.Name</p>

                        </div>
                            
                        <div class="row pt-2">
                            
                            <div class="col-6 col-md-3">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-primary border form-control">Back to list</a>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-2">
                    @if(Model.Product.ProductImages != null)
                    {
                        foreach( var image in Model.Product.ProductImages)
                        {
                            <div class="border p-1 m-2 text-center">
                                <img src="@image.ImageUrl" width="100%"
                                    style="border-radius:5px; border:1px solid #bbb9b9" />
                            </div>
                        }
                    }
                    
                </div>

            </div>

            

        </form>
    </div>
</div>

